@model CorpusSMDemo.ViewModels.Home.SignUpVM
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/particlesjs/2.2.2/particles.min.js"></script>
<div class="container">
    <form action="/Home/SignUp" method="post">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <center>
                                    <a href="https://icons8.com/icon/W28azECz06zJ/add-user-male"></a>

                                    <img width="100px" src="https://img.icons8.com/officel/80/000000/add-user-male.png" />
                                </center>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <center>
                                    <h3>Sign Up</h3>
                                </center>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <center>
                                    <hr />
                                </center>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <center>
                                    <span class="badge bg-info text-dark">Personal Information</span>
                                </center>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Username:</label>
                                <div class="form-group">
                                    <!--<asp:TextBox class="form-control" ID="TextBox1" placeholder="Full_Name" runat="server"></asp:TextBox>-->
                                    @Html.TextBoxFor(u => u.Username, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(u => u.Username, null, new { @class = "error" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label>Password:</label>
                                <div class="form-group">
                                    @Html.TextBoxFor(u => u.Password, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(u => u.Password, null, new { @class = "error" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>First Name:</label>
                                <div class="form-group">
                                    @Html.TextBoxFor(u => u.FirstName, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(u => u.FirstName, null, new { @class = "error" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label>Last Name:</label>
                                <div class="form-group">
                                    @Html.TextBoxFor(u => u.LastName, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(u => u.LastName, null, new { @class = "error" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <label>Email:</label>
                                <div class="form-group">
                                    @Html.TextBoxFor(u => u.Email, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(u => u.Email, null, new { @class = "error" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <input class="btn btn-primary btn-block btn-lg" type="submit" name="SignUp" value="SignUp" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <a href="/Home/Index">
                    <img width="45" src="~/images/home.png" />
                </a>
                <br /><br />
            </div>
        </div>
    </form>
    <script>
        window.
            onload
            = function () {
                Particles.
                    init
                    ({
                        selector:
                            '.background'
                    });
            };
        var particles = Particles.init({
            selector: '.background',
            color: ['#DA0463', '#404B69', '#DBEDF3'],
            connectParticles: true
        });
    </script>
</div>
<canvas class="background"></canvas>

